# Top-most EditorConfig file.
root = true

# Universal settings.
# (Read, and understand, https://www.jwz.org/doc/tabs-vs-spaces.html before discussing indent_style or tab_width.)
[*]
indent_style = space
indent_size = 4
tab_width = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.scala]
indent_size = 2
